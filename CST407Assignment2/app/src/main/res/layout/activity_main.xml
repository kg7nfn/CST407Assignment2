<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/diceSideTextView"
                android:layout_width="222dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/numDiceSides" />

            <Spinner
                android:id="@+id/diceSpinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" />
        </LinearLayout>

        <TextView
            android:id="@+id/rollResutls"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rollResultLableText" />

        <TextView
            android:id="@+id/diceResult"
            android:layout_width="match_parent"
            android:layout_height="130dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="201dp"
                android:layout_height="151dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/totalDice"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/diceTotal" />

                <TextView
                    android:id="@+id/diceTotalText"
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <Button
                    android:id="@+id/diceRoll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/rollButton"
                    android:textSize="14sp"
                    tools:text="@string/rollButton" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/numberOfDiceLable"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/numberOfDiceLabelText" />

                <ImageButton
                    android:id="@+id/diceUp"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:src="@android:drawable/arrow_up_float" />

                <TextView
                    android:id="@+id/numDiceTextView"
                    android:layout_width="match_parent"
                    android:layout_height="43dp"
                    android:textAppearance="@style/TextAppearance.AppCompat.Medium" />

                <ImageButton
                    android:id="@+id/diceDown"
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:text="Button" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>